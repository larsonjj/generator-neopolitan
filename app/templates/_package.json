{
  "name": "<%= _.slugify(projectName) %>",
  "version": "0.0.1",
  "dependencies": {<% if (jsFramework === 'marionette') { %>
    "jquery": "~2.1.3",<% } %>
    "babelify": "~6.0.2",
    "normalize.css": "~3.0.1"<% if (jsFramework === 'angular') { %>,
    "angular": "~1.3.15",
    "angular-route": "~1.3.15",
    "json3": "~3.3.1"<% } %><% if (jsFramework === 'marionette') { %>,
    "backbone": "~1.2.1",
    "backbone.marionette": "~2.4.1",
    "underscore": "~1.8.3"<% } %><% if (jsFramework === 'react') { %>,
    "react-router": "~0.13.3",
    "superagent": "~1.2.0",
    "reflux": "~0.2.7",
    "node-jsx": "~0.12.4",
    "react": "~0.13.0"<% } %>
  },
  "devDependencies": {
    "babel-eslint": "~3.1.19",
    "babel-core": "~5.6.15",<% if (jsFramework === 'react') { %>
    "eslint-plugin-react": "~2.6.2",<% } %>
    "minimist": "~1.1.1",
    "event-stream": "~3.3.1",<% if (jsFramework === 'angular') { %>
    "browserify-ngannotate": "0.7.2",
    "browserify-ng-html2js": "~1.1.2",
    "angular-mocks": "~1.3.15",<% } else if (jsFramework === 'marionette') { %>
    "jstify": "0.9.0",<% } %>
    "rimraf": "~2.2.0",
    "gulp-plumber": "~1.0.1",
    "gulp-changed": "~1.2.1",
    "gulp-uglify": "~1.2.0",
    "gulp-if": "~1.2.5",
    "run-sequence": "1.1.1",
    "glob": "~5.0.10",
    "gulp-data": "~1.2.0",
    "gulp-sourcemaps": "~1.5.2",
    "gulp-load-plugins": "~0.10.0",
    "vinyl-source-stream": "~1.1.0",
    "vinyl-buffer": "~1.0.0",
    "gulp-util": "~3.0.5",
    "gulp": "~3.9.0",
    "browser-sync": "~2.7.12",
    "del": "~1.2.0",
    "gulp-postcss": "~5.1.8",
    "autoprefixer-core": "~5.2.0",
    "gulp-htmlmin": "~1.1.3",<% if (jsOption === 'browserify') { %>
    "envify": "~3.4.0",<% } %><% if (useE2e) { %>
    "protractor": "~2.0.0",
    "gulp-protractor": "~1.0.0",
    "chromedriver": "~2.13.0 ",<% if (testFramework === 'mocha') { %>
    "mocha": "~2.1.0",
    "chai": "~1.10.0",
    "chai-as-promised": "4.1.1",<% } %><% } %>
    "gulp-imagemin": "~2.2.1",
    "imagemin-svgo": "~4.0.0",
    "imagemin-pngquant": "~4.0.0",
    "gulp-eslint": "~0.14.0",<% if (cssOption === 'sass') { %>
    "gulp-sass": "~2.0.1",<% } %><% if (cssOption === 'less') { %>
    "gulp-less": "~3.0.3",<% } %><% if (cssOption === 'stylus') { %>
    "gulp-stylus": "~2.0.5",<% } %>
    "gulp-newer": "~0.5.1",<% if (jsOption === 'browserify') { %>
    "browserify" : "~10.0.0"<% } %><% if (testFramework !== 'none') { %>,
    "karma": "~0.12.21",
    "karma-browserify": "~4.2.1",
    "karma-phantomjs-launcher": "~0.1.2",
    "karma-chrome-launcher": "~0.1.2"<% if (testFramework === 'jasmine') { %>,
    "karma-jasmine": "~0.2.0"<% } else if (testFramework === 'mocha') { %>,
    "karma-chai": "~0.1.0",
    "karma-mocha": "~0.1.3"<% } %><% } %>
  },
  "scripts": {
    "clean": "rimraf node_modules tmp build"<% if (useE2e) { %>,
    "update-webdriver": "node node_modules/protractor/bin/webdriver-manager update",
    "postinstall": "npm run update-webdriver"<% } %>
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "//": "CUSTOM CONFIGURATION",
  "config": {
    "//": "Local Server Settings",
    "host": "127.0.0.1",
    "port": "9010",
    "baseUrl": "/",
    "//": "Gulp Task Directories",
    "//": "NOTE: folders prefixed with an underscore (_) will have it removed when moved to build target (ex: src/_images -> build/images)",
    "//": "NOTE: folders NOT prefixed with underscore (_) will be copied to build target 1 to 1 (ex: src/fonts -> build/fonts)",
    "directories": {
      "source": "src",
      "destination": "build",
      "temporary": "tmp",
      "modules": "_modules",
      "layouts": "_layouts",
      "images": "_images",
      "styles": "_styles",
      "scripts": "_scripts"
    }
  }
}
